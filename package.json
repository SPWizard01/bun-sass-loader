{
  "name": "bun-style-loader",
  "description": "Bun plugin to allow loading css, sass files, and css modules",
  "version": "0.3.0",
  "module": "src/index.ts",
  "types": "types/index.d.ts",
  "type": "module",
  "files": ["src", "types"],
  "keywords": [
    "bun",
    "plugin",
    "style",
    "loader",
    "css",
    "sass",
    "scss"
  ],
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./types/index.d.ts"
    },
    "./utils": {
      "bun": "./src/utils.ts",
      "types": "./types/utils.d.ts"
    }
  },
  "scripts": {
    "prepare": "rm -rf types && tsc -p tsconfig.build.json"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": ">= 5.0.0",
    "sass": ">= 1.0.0"
  },
  "dependencies": {
    "lightningcss-wasm": "^1.22.1"
  }
}
